
public class Person {
	public String name = null;
	public int age = 0;

	public Person(){}						//①
	public Person(String namae, int toshi){	//②
		this.name = namae;
		this.age = toshi;
	}
	public Person(String name){				//③
		this.name = name;
		this.age = 0;
	}
	public Person(int age){					//④
		this.name = "名前なし";
		this.age = age;
	}

}
